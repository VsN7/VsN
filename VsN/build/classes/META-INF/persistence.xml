<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="vsn" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>br.com.vsn.model.Cliente</class>
    <class>br.com.vsn.model.Conta</class>
    <class>br.com.vsn.model.Estoque</class>
    <class>br.com.vsn.model.Fornecedor</class>
    <class>br.com.vsn.model.Orcamento</class>
    <class>br.com.vsn.model.OrdemServico</class>
    <class>br.com.vsn.model.Usuario</class>
    <class>br.com.vsn.model.Funcionario</class>
    <class>br.com.vsn.model.Pagamento</class>
    <class>br.com.vsn.model.Empresa</class>
    <class>br.com.vsn.model.PagamentoTabela</class>
    <class>br.com.vsn.model.Despesa</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/vsn?createDatabaseIfNotExist=true"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
    </properties>
  </persistence-unit>
</persistence>
